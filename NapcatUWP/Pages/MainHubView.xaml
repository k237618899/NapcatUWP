<Page
    x:Class="NapcatUWP.MainHubView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:NapcatUWP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    RequestedTheme="Dark"
    mc:Ignorable="d">

    <Hub
        Background="#7e6ca8"
        FontFamily="{StaticResource SetoFontFamily}"
        Header="vivid_Messager">
        <HubSection
            Name="SectionProfile"
            MinWidth="250"
            FontFamily="{StaticResource SetoFontFamily}">
            <HubSection.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Name="ProfileHeaderText" FontFamily="{StaticResource SetoFontFamily}">Profile</TextBlock>
                </DataTemplate>
            </HubSection.HeaderTemplate>
            <DataTemplate>
                <RelativePanel>
                    <TextBlock
                        Name="EmptyBlock"
                        RelativePanel.AlignHorizontalCenterWithPanel="True"
                        RelativePanel.AlignTopWithPanel="True" />
                    <Image
                        Name="UserAvator"
                        MaxWidth="100"
                        MaxHeight="100"
                        RelativePanel.AlignHorizontalCenterWithPanel="True"
                        RelativePanel.Below="EmptyBlock"
                        Source="../Assets/StoreLogo.scale-200.png" />
                    <TextBlock
                        Name="TextAccount"
                        RelativePanel.AlignHorizontalCenterWithPanel="True"
                        RelativePanel.Below="UserAvator" />
                    <TextBlock
                        Name="TextNickName"
                        RelativePanel.AlignHorizontalCenterWithPanel="True"
                        RelativePanel.Below="TextAccount" />
                    <Button
                        Name="BtnLogout"
                        MinWidth="100"
                        Click="BtnLogout_Click"
                        Content="Logout"
                        FontFamily="{StaticResource SetoFontFamily}"
                        RelativePanel.AlignBottomWithPanel="True"
                        RelativePanel.AlignHorizontalCenterWithPanel="True" />
                </RelativePanel>
            </DataTemplate>
        </HubSection>
    </Hub>
</Page>
