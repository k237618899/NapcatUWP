<Page
    x:Class="NapcatUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded"
    RequestedTheme="Dark"
    mc:Ignorable="d">

    <RelativePanel Name="RelativePanelMain" Background="#7e6ca8">

        <Button
            Name="SettingBars"
            Click="SettingBars_Click"
            Content="Settings"
            RelativePanel.AlignRightWithPanel="True" />
        <TextBlock
            Name="TextBlockTitle"
            FontFamily="{StaticResource SetoFontFamily}"
            FontSize="40"
            RelativePanel.AlignHorizontalCenterWithPanel="True"
            RelativePanel.Below="SettingBars">
            vivid_messager
        </TextBlock>
        <Image
            Name="MainLogo"
            RelativePanel.AlignHorizontalCenterWithPanel="True"
            RelativePanel.Below="TextBlockTitle"
            Source="Properties/../Assets/Anna1.png" />
        <TextBox
            Name="TextBoxAccount"
            Width="200"
            MaxWidth="250"
            Header="Account"
            RelativePanel.Above="PasswordBoxToken"
            RelativePanel.AlignHorizontalCenterWithPanel="True" />
        <PasswordBox
            Name="PasswordBoxToken"
            Width="200"
            MaxWidth="250"
            Header="Token"
            RelativePanel.Above="EmptyBlock2"
            RelativePanel.AlignHorizontalCenterWithPanel="True" />
        <TextBlock
            Name="EmptyBlock2"
            RelativePanel.Above="ButtonLogin"
            RelativePanel.AlignHorizontalCenterWithPanel="True" />
        <Button
            Name="ButtonLogin"
            Width="200"
            MaxWidth="250"
            Click="ButtonLogin_Click"
            Content="Login"
            FontFamily="{StaticResource SetoFontFamily}"
            RelativePanel.Above="EmptyBlock"
            RelativePanel.AlignHorizontalCenterWithPanel="True" />
        <TextBlock
            Name="EmptyBlock"
            RelativePanel.AlignBottomWithPanel="True"
            RelativePanel.AlignHorizontalCenterWithPanel="True" />
       
            <ProgressRing
                Name="Progress_R"
                Width="100"
                Height="100"
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                RelativePanel.AlignVerticalCenterWithPanel="True" />

    </RelativePanel>

</Page>