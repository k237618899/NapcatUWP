<UserControl
    x:Class="NapcatUWP.Controls.VideoPlayerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="600">

    <!-- 全屏背景覆盖层 -->
    <Grid x:Name="OverlayGrid" Background="#CC000000" Tapped="OverlayGrid_Tapped">

        <!-- 视频播放器容器 -->
        <Border x:Name="PlayerContainer" 
                Background="Black" 
                CornerRadius="8"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                MaxWidth="800" 
                MaxHeight="600"
                Tapped="PlayerContainer_Tapped">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 标题栏 -->
                <Grid Grid.Row="0" Background="#33FFFFFF" Height="40">
                    <TextBlock x:Name="TitleTextBlock" 
                               Text="视频播放器" 
                               Foreground="White" 
                               FontSize="16" 
                               VerticalAlignment="Center" 
                               Margin="16,0,0,0"/>

                    <Button x:Name="CloseButton" 
                            Content="✕" 
                            Background="Transparent" 
                            Foreground="White" 
                            FontSize="16" 
                            Width="40" 
                            Height="40" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center"
                            Click="CloseButton_Click"
                            BorderThickness="0"/>
                </Grid>

                <!-- 视频播放区域 -->
                <Grid Grid.Row="1" Background="Black">
                    <MediaElement x:Name="VideoPlayer" 
                                  HorizontalAlignment="Stretch" 
                                  VerticalAlignment="Stretch"
                                  AreTransportControlsEnabled="False"
                                  MediaOpened="VideoPlayer_MediaOpened"
                                  MediaFailed="VideoPlayer_MediaFailed"
                                  MediaEnded="VideoPlayer_MediaEnded"
                                  CurrentStateChanged="VideoPlayer_CurrentStateChanged"
                                  Tapped="VideoPlayer_Tapped"/>

                    <!-- 加载指示器 -->
                    <ProgressRing x:Name="LoadingRing" 
                                  IsActive="True" 
                                  Foreground="White" 
                                  Width="50" 
                                  Height="50" 
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"/>

                    <!-- 播放/暂停按钮覆盖层 -->
                    <Button x:Name="PlayPauseOverlay" 
                            Background="Transparent" 
                            BorderThickness="0"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Width="80" 
                            Height="80"
                            Click="PlayPauseOverlay_Click"
                            Visibility="Collapsed">
                        <TextBlock x:Name="PlayPauseIcon" 
                                   Text="▶" 
                                   Foreground="White" 
                                   FontSize="40" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Button>

                    <!-- 错误信息 -->
                    <TextBlock x:Name="ErrorTextBlock" 
                               Text="视频加载失败" 
                               Foreground="Red" 
                               FontSize="16" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Visibility="Collapsed"/>
                </Grid>

                <!-- 控制栏 -->
                <Grid Grid.Row="2" x:Name="ControlsPanel" Background="#66000000" Height="60" Visibility="Visible">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 播放/暂停按钮 -->
                    <Button x:Name="PlayPauseButton" 
                            Grid.Column="0"
                            Background="Transparent" 
                            BorderThickness="0"
                            Width="50" 
                            Height="50" 
                            Margin="8,5,8,5"
                            Click="PlayPauseButton_Click">
                        <TextBlock x:Name="PlayPauseButtonIcon" 
                                   Text="▶" 
                                   Foreground="White" 
                                   FontSize="20" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Button>

                    <!-- 当前时间 -->
                    <TextBlock x:Name="CurrentTimeText" 
                               Grid.Column="1"
                               Text="00:00" 
                               Foreground="White" 
                               FontSize="14" 
                               VerticalAlignment="Center" 
                               Margin="8,0,8,0"/>

                    <!-- 进度条 -->
                    <Slider x:Name="ProgressSlider" 
                            Grid.Column="2"
                            Minimum="0" 
                            Maximum="100" 
                            Value="0" 
                            Margin="8,0,8,0"
                            VerticalAlignment="Center"
                            ValueChanged="ProgressSlider_ValueChanged"
                            PointerPressed="ProgressSlider_PointerPressed"
                            PointerReleased="ProgressSlider_PointerReleased"/>

                    <!-- 总时长 -->
                    <TextBlock x:Name="TotalTimeText" 
                               Grid.Column="3"
                               Text="00:00" 
                               Foreground="White" 
                               FontSize="14" 
                               VerticalAlignment="Center" 
                               Margin="8,0,8,0"/>

                    <!-- 音量按钮 -->
                    <Button x:Name="VolumeButton" 
                            Grid.Column="4"
                            Background="Transparent" 
                            BorderThickness="0"
                            Width="50" 
                            Height="50" 
                            Margin="8,5,8,5"
                            Click="VolumeButton_Click">
                        <TextBlock x:Name="VolumeIcon" 
                                   Text="🔊" 
                                   Foreground="White" 
                                   FontSize="16" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>