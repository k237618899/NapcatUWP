<views:MvxWindowsPage
    x:Class="AnnaMessager.UWP.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:MvvmCross.Uwp.Views"
    xmlns:converters="using:AnnaMessager.UWP.Converters"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <views:MvxWindowsPage.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- 導航欄樣式 -->
        <Style x:Key="NavigationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
        </Style>
    </views:MvxWindowsPage.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左側導航欄 -->
        <Grid Grid.Column="0" 
              Background="#FF0078D4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 用戶信息區域 -->
            <Border Grid.Row="0" 
                    Background="#FF005A9E"
                    Padding="16">
                <StackPanel Orientation="Horizontal">
                    <!-- 用戶頭像 -->
                    <Border Width="40" Height="40"
                            Background="#FF003D6B"
                            Margin="0,0,12,0">
                        <TextBlock Text="👤"
                                  FontSize="20"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Foreground="White"/>
                    </Border>
                    
                    <!-- 用戶信息 -->
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{Binding CurrentUserName, FallbackValue='用戶名稱'}"
                                  Foreground="White"
                                  FontWeight="SemiBold"
                                  FontSize="16"/>
                        <TextBlock Text="{Binding UserStatus, FallbackValue='在線'}"
                                  Foreground="#E0FFFFFF"
                                  FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 導航選項 -->
            <StackPanel Grid.Row="1" Margin="8,16">
                <Button x:Name="ChatsButton"
                       Content="💬 聊天"
                       Style="{StaticResource NavigationButtonStyle}"
                       Click="Navigation_Click"
                       Tag="Chats"/>
                       
                <Button x:Name="ContactsButton"
                       Content="👥 聯絡人"
                       Style="{StaticResource NavigationButtonStyle}"
                       Click="Navigation_Click"
                       Tag="Contacts"/>
                       
                <Button x:Name="GroupsButton"
                       Content="👨‍👩‍👧‍👦 群組"
                       Style="{StaticResource NavigationButtonStyle}"
                       Click="Navigation_Click"
                       Tag="Groups"/>
                       
                <Button x:Name="SettingsButton"
                       Content="⚙️ 設定"
                       Style="{StaticResource NavigationButtonStyle}"
                       Click="Navigation_Click"
                       Tag="Settings"/>
            </StackPanel>

            <!-- 底部操作 -->
            <StackPanel Grid.Row="2" Margin="8,16">
                <Button Content="🚪 登出"
                       Style="{StaticResource NavigationButtonStyle}"
                       Command="{Binding LogoutCommand}"
                       Foreground="#E0FFFFFF"/>
                       
                <TextBlock Text="{Binding ConnectionStatus, FallbackValue='已連接'}"
                          HorizontalAlignment="Center"
                          FontSize="12"
                          Foreground="#E0FFFFFF"
                          Margin="0,8"/>
            </StackPanel>
        </Grid>

        <!-- 右側內容區域 -->
        <Grid Grid.Column="1">
            <Frame x:Name="ContentFrame" 
                   Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"/>

            <!-- 載入指示器 -->
            <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                  Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center">
                    <ProgressRing Width="40" Height="40" IsActive="True"/>
                    <TextBlock Text="載入中..."
                              HorizontalAlignment="Center"
                              Margin="0,16,0,0"
                              FontSize="16"
                              Foreground="Gray"/>
                </StackPanel>
            </Grid>

            <!-- 連接錯誤提示 -->
            <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                  Visibility="{Binding HasConnectionError, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           MaxWidth="400">
                    <TextBlock Text="⚠️"
                             FontSize="48"
                             HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="連接已中斷"
                              FontSize="20"
                              FontWeight="SemiBold"
                              HorizontalAlignment="Center"
                              Margin="0,16,0,8"/>
                    
                    <TextBlock Text="{Binding ConnectionErrorMessage}"
                              FontSize="14"
                              Foreground="Gray"
                              HorizontalAlignment="Center"
                              TextAlignment="Center"
                              TextWrapping="Wrap"
                              Margin="0,0,0,16"/>
                    
                    <Button Content="重新連接"
                           Command="{Binding ReconnectCommand}"
                           Background="#FF0078D4"
                           Foreground="White"
                           Padding="24,8"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</views:MvxWindowsPage>