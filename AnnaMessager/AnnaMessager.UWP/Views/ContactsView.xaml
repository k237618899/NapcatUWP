<views:MvxWindowsPage
    x:Class="AnnaMessager.UWP.Views.ContactsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:MvvmCross.Uwp.Views"
    xmlns:converters="using:AnnaMessager.UWP.Converters"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <views:MvxWindowsPage.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:FirstLetterConverter x:Key="FirstLetterConverter"/>
        <converters:EmptyListToVisibilityConverter x:Key="EmptyListToVisibilityConverter"/>
        
        <!-- 聯絡人項目樣式 -->
        <Style x:Key="ContactItemStyle" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        
        <!-- 標題樣式 -->
        <Style x:Key="TitleTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
        </Style>
    </views:MvxWindowsPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 標題欄 -->
        <Grid Grid.Row="0" Padding="24,16">
            <TextBlock Text="聯絡人" 
                       Style="{StaticResource TitleTextStyle}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"/>
        </Grid>

        <!-- 搜索欄 -->
        <Grid Grid.Row="1" Margin="16,0,16,16">
            <TextBox x:Name="SearchBox" 
                     Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     PlaceholderText="搜尋聯絡人..."
                     Background="{ThemeResource SystemControlBackgroundAltHighBrush}"
                     BorderBrush="Transparent"
                     TextChanged="SearchBox_TextChanged"/>
        </Grid>

        <!-- 聯絡人列表 -->
        <ListView Grid.Row="2" 
                  x:Name="ContactsListView"
                  ItemsSource="{Binding Contacts}"
                  SelectionMode="Single"
                  ItemContainerStyle="{StaticResource ContactItemStyle}"
                  SelectionChanged="ContactsListView_SelectionChanged">
                  
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Height="64" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 頭像區域 -->
                        <Grid Grid.Column="0" Width="40" Height="40">
                            <!-- 頭像背景 -->
                            <Ellipse Fill="#FF0078D4"/>
                            
                            <!-- 頭像文字 -->
                            <TextBlock Text="{Binding DisplayName, Converter={StaticResource FirstLetterConverter}}"
                                      FontSize="16"
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                                      
                            <!-- 在線狀態指示器 -->
                            <Ellipse Width="12" Height="12"
                                    Fill="Green"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Margin="0,0,-2,-2"
                                    Visibility="{Binding IsOnline, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </Grid>

                        <!-- 聯絡人信息 -->
                        <StackPanel Grid.Column="1" 
                                   Margin="12,0,8,0"
                                   VerticalAlignment="Center">
                            <!-- 顯示名稱 -->
                            <TextBlock Text="{Binding DisplayName}" 
                                      FontSize="16"
                                      FontWeight="SemiBold"
                                      Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                            
                            <!-- 備註/暱稱 -->
                            <TextBlock Text="{Binding Nickname}"
                                      FontSize="14"
                                      Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                      Visibility="{Binding HasRemark, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>

                        <!-- 狀態指示 -->
                        <StackPanel Grid.Column="2" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right">
                            <FontIcon Glyph="&#xE8BD;" 
                                     FontSize="16"
                                     Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- 載入指示器 -->
        <Grid Grid.Row="2" 
              Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
              Visibility="{Binding IsRefreshing, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <ProgressRing Width="40" Height="40" IsActive="True"/>
                <TextBlock Text="載入聯絡人..."
                          FontSize="14"
                          Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                          HorizontalAlignment="Center"
                          Margin="0,8,0,0"/>
            </StackPanel>
        </Grid>

        <!-- 空狀態顯示 -->
        <Grid Grid.Row="2"
              Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
              Visibility="{Binding IsEmpty, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <FontIcon Glyph="&#xE77B;"
                         FontSize="48"
                         Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,16"/>
                <TextBlock Text="暫無聯絡人"
                          FontSize="18"
                          Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="添加好友後在這裡顯示"
                          FontSize="14"
                          Foreground="{ThemeResource SystemControlForegroundBaseLowBrush}"
                          HorizontalAlignment="Center"
                          Margin="0,8,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</views:MvxWindowsPage>