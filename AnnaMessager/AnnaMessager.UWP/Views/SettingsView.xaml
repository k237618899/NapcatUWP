<views:MvxWindowsPage
    x:Class="AnnaMessager.UWP.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:MvvmCross.Uwp.Views"
    xmlns:converters="using:AnnaMessager.UWP.Converters"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <views:MvxWindowsPage.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- 設定項目樣式 -->
        <Style x:Key="SettingItemStyle" TargetType="Grid">
            <Setter Property="Padding" Value="24,16"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>
        
        <!-- 標題樣式 -->
        <Style x:Key="TitleTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        
        <!-- 設定標題樣式 -->
        <Style x:Key="SettingTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        
        <!-- 設定描述樣式 -->
        <Style x:Key="SettingDescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
        </Style>
    </views:MvxWindowsPage.Resources>

    <ScrollViewer>
        <StackPanel>
            <!-- 標題欄 -->
            <Grid Padding="24,16">
                <TextBlock Text="設定" 
                           Style="{StaticResource TitleTextStyle}"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- 通知設定 -->
            <TextBlock Text="通知設定" 
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#FF0078D4"
                       Margin="24,16,24,8"/>
                       
            <Grid Style="{StaticResource SettingItemStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="啟用通知"
                               Style="{StaticResource SettingTitleStyle}"/>
                    <TextBlock Text="接收新消息時顯示桌面通知"
                               Style="{StaticResource SettingDescriptionStyle}"/>
                </StackPanel>
                
                <ToggleSwitch Grid.Column="1"
                              IsOn="{Binding Settings.EnableNotifications, Mode=TwoWay}"
                              VerticalAlignment="Center"/>
            </Grid>

            <Grid Style="{StaticResource SettingItemStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="聲音提醒"
                               Style="{StaticResource SettingTitleStyle}"/>
                    <TextBlock Text="新消息時播放提示音"
                               Style="{StaticResource SettingDescriptionStyle}"/>
                </StackPanel>
                
                <ToggleSwitch Grid.Column="1"
                              IsOn="{Binding Settings.EnableSounds, Mode=TwoWay}"
                              VerticalAlignment="Center"/>
            </Grid>

            <!-- 快取設定 -->
            <TextBlock Text="快取設定" 
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#FF0078D4"
                       Margin="24,32,24,8"/>

            <Grid Style="{StaticResource SettingItemStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="圖片快取大小限制"
                               Style="{StaticResource SettingTitleStyle}"/>
                    <TextBlock Style="{StaticResource SettingDescriptionStyle}">
                        <Run Text="目前限制："/>
                        <Run Text="{Binding Settings.MaxImageCacheSize}"/>
                        <Run Text="MB"/>
                    </TextBlock>
                </StackPanel>
                
                <Slider Grid.Column="1"
                        Width="150"
                        Minimum="50"
                        Maximum="500"
                        Value="{Binding Settings.MaxImageCacheSize, Mode=TwoWay}"
                        VerticalAlignment="Center"/>
            </Grid>

            <Grid Style="{StaticResource SettingItemStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="快取統計"
                               Style="{StaticResource SettingTitleStyle}"/>
                    <StackPanel>
                        <TextBlock Style="{StaticResource SettingDescriptionStyle}">
                            <Run Text="總大小："/>
                            <Run Text="{Binding CacheInfo.TotalSizeDisplay}"/>
                        </TextBlock>
                        <TextBlock Style="{StaticResource SettingDescriptionStyle}">
                            <Run Text="消息數量："/>
                            <Run Text="{Binding CacheInfo.TotalMessages}"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal"
                           VerticalAlignment="Center">
                    <Button Content="計算"
                            Command="{Binding CalculateCacheCommand}"
                            IsEnabled="{Binding IsCalculatingCache, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=inverted}"
                            Margin="0,0,8,0"/>
                    
                    <ProgressRing Width="20" Height="20"
                                 IsActive="{Binding IsCalculatingCache}"
                                 Visibility="{Binding IsCalculatingCache, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>

            <Grid Style="{StaticResource SettingItemStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="清理快取"
                               Style="{StaticResource SettingTitleStyle}"/>
                    <TextBlock Text="清除所有圖片和消息快取"
                               Style="{StaticResource SettingDescriptionStyle}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal"
                           VerticalAlignment="Center">
                    <Button Content="清除過期"
                            Command="{Binding ClearExpiredCacheCommand}"
                            Margin="0,0,8,0"/>
                    <Button Content="全部清除"
                            Command="{Binding ClearCacheCommand}"/>
                </StackPanel>
            </Grid>

            <!-- 系統設定 -->
            <TextBlock Text="系統設定" 
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#FF0078D4"
                       Margin="24,32,24,8"/>

            <Grid Style="{StaticResource SettingItemStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="伺服器設定"
                               Style="{StaticResource SettingTitleStyle}"/>
                    <TextBlock Text="配置 OneBot 伺服器連接"
                               Style="{StaticResource SettingDescriptionStyle}"/>
                </StackPanel>
                
                <Button Grid.Column="1"
                        Content="配置"
                        Command="{Binding OpenServerSettingsCommand}"
                        VerticalAlignment="Center"/>
            </Grid>

            <Grid Style="{StaticResource SettingItemStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="登出"
                               Style="{StaticResource SettingTitleStyle}"/>
                    <TextBlock Text="退出目前帳號並返回登入頁面"
                               Style="{StaticResource SettingDescriptionStyle}"/>
                </StackPanel>
                
                <Button Grid.Column="1"
                        Content="登出"
                        Command="{Binding LogoutCommand}"
                        VerticalAlignment="Center"/>
            </Grid>

            <!-- 保存按鈕 -->
            <Grid Padding="24,32,24,24">
                <Button Content="儲存設定"
                        Background="#FF0078D4"
                        Foreground="White"
                        Command="{Binding SaveSettingsCommand}"
                        HorizontalAlignment="Center"
                        MinWidth="120"
                        Height="40"/>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</views:MvxWindowsPage>