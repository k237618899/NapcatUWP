<views:MvxWindowsPage
    x:Class="AnnaMessager.UWP.Views.GroupsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:MvvmCross.Uwp.Views"
    xmlns:converters="using:AnnaMessager.UWP.Converters"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <views:MvxWindowsPage.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- 群組項目樣式 -->
        <Style x:Key="GroupItemStyle" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        
        <!-- 標題樣式 -->
        <Style x:Key="TitleTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
    </views:MvxWindowsPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 標題欄 -->
        <Grid Grid.Row="0" Padding="24,16">
            <TextBlock Text="群組" 
                       Style="{StaticResource TitleTextStyle}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"/>
        </Grid>

        <!-- 搜索欄 -->
        <Grid Grid.Row="1" Margin="16,0,16,16">
            <TextBox x:Name="SearchBox" 
                     Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     PlaceholderText="搜尋群組..."
                     Background="White"
                     BorderBrush="Gray"
                     TextChanged="SearchBox_TextChanged"/>
        </Grid>

        <!-- 群組列表 -->
        <ListView Grid.Row="2" 
                  x:Name="GroupsListView"
                  ItemsSource="{Binding Groups}"
                  SelectionMode="Single"
                  ItemContainerStyle="{StaticResource GroupItemStyle}"
                  SelectionChanged="GroupsListView_SelectionChanged">
                  
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Height="72" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 群組頭像區域 -->
                        <Grid Grid.Column="0" Width="48" Height="48">
                            <!-- 頭像背景 -->
                            <Border Background="#FF0078D4"
                                    Width="48" Height="48">
                                <TextBlock Text="群"
                                          FontSize="18"
                                          FontWeight="SemiBold"
                                          Foreground="White"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>
                        </Grid>

                        <!-- 群組信息 -->
                        <StackPanel Grid.Column="1" 
                                   Margin="12,0,8,0"
                                   VerticalAlignment="Center">
                            <!-- 群組名稱 -->
                            <TextBlock Text="{Binding GroupName}" 
                                      FontSize="16"
                                      FontWeight="SemiBold"
                                      Foreground="Black"/>
                            
                            <!-- 成員數量 -->
                            <TextBlock FontSize="14"
                                      Foreground="Gray">
                                <Run Text="{Binding MemberCount}"/>
                                <Run Text="位成員"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- 群組角色指示 -->
                        <StackPanel Grid.Column="2" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right">
                            <!-- 管理員標誌 -->
                            <TextBlock Text="管理員" 
                                      FontSize="12"
                                      Foreground="#FF0078D4"
                                      Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            
                            <!-- 群主標誌 -->
                            <TextBlock Text="群主" 
                                      FontSize="12"
                                      Foreground="Red"
                                      Visibility="{Binding IsOwner, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                      
                            <!-- 箭頭圖標 -->
                            <TextBlock Text=">" 
                                     FontSize="16"
                                     Foreground="Gray"
                                     HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- 載入指示器 -->
        <Grid Grid.Row="2" 
              Background="White"
              Visibility="{Binding IsRefreshing, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <ProgressRing Width="40" Height="40" IsActive="True"/>
                <TextBlock Text="載入群組..."
                          FontSize="14"
                          Foreground="Gray"
                          HorizontalAlignment="Center"
                          Margin="0,8,0,0"/>
            </StackPanel>
        </Grid>

        <!-- 空狀態顯示 -->
        <Grid Grid.Row="2"
              Background="White"
              Visibility="{Binding IsEmpty, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <TextBlock Text="📱"
                         FontSize="48"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,16"/>
                <TextBlock Text="暫無群組"
                          FontSize="18"
                          Foreground="Gray"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="加入群組後在這裡顯示"
                          FontSize="14"
                          Foreground="Gray"
                          HorizontalAlignment="Center"
                          Margin="0,8,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</views:MvxWindowsPage>