<views:MvxWindowsPage
    x:Class="AnnaMessager.UWP.Views.ChatListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:MvvmCross.Uwp.Views"
    xmlns:converters="using:AnnaMessager.UWP.Converters"
    x:TypeArguments="viewModels:ChatListViewModel"
    xmlns:viewModels="using:AnnaMessager.Core.ViewModels"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <views:MvxWindowsPage.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:FirstLetterConverter x:Key="FirstLetterConverter"/>
        <converters:EmptyListToVisibilityConverter x:Key="EmptyListToVisibilityConverter"/>

        <!-- 簡化的樣式定義 -->
        <Style x:Key="TitleTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
        </Style>

        <Style x:Key="ChatNameTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
        </Style>

        <Style x:Key="LastMessageTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
        </Style>

        <Style x:Key="TimeTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
        </Style>

        <Style x:Key="FilterToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#FF0078D4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinWidth" Value="60"/>
        </Style>

        <!-- 顏色資源 -->
        <SolidColorBrush x:Key="AccentBrush" Color="#FF005A9E"/>
        <SolidColorBrush x:Key="UnreadBadgeBrush" Color="#FFFF4444"/>
        <SolidColorBrush x:Key="OnlineBrush" Color="#FF4CAF50"/>

        <!-- 聊天項目樣式 -->
        <Style x:Key="ChatItemStyle" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

    </views:MvxWindowsPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 標題欄 -->
        <Grid Grid.Row="0" Padding="24,16">
            <TextBlock Text="聊天" 
                       Style="{StaticResource TitleTextStyle}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"/>
        </Grid>

        <!-- 搜索和過濾欄 -->
        <Grid Grid.Row="1" Margin="16,0,16,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 搜索框 -->
            <TextBox Grid.Row="0"
                     x:Name="SearchBox" 
                     Text="{Binding SearchText, Mode=TwoWay}"
                     PlaceholderText="搜尋聊天、聯絡人..."
                     Margin="0,0,0,12"
                     Background="{ThemeResource SystemControlBackgroundAltHighBrush}"
                     BorderBrush="Transparent"
                     TextChanged="SearchBox_TextChanged"/>

            <!-- 過濾按鈕 -->
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Left">
                <ToggleButton x:Name="UnreadFilterButton"
                              Content="未讀"
                              IsChecked="{Binding ShowOnlyUnread, Mode=TwoWay}"
                              Style="{StaticResource FilterToggleButtonStyle}"
                              Margin="0,0,8,0"
                              Command="{Binding ToggleUnreadFilterCommand}"/>

                <ToggleButton x:Name="PinnedFilterButton"
                              Content="置頂"
                              IsChecked="{Binding ShowOnlyPinned, Mode=TwoWay}"
                              Style="{StaticResource FilterToggleButtonStyle}"
                              Command="{Binding TogglePinnedFilterCommand}"/>
            </StackPanel>
        </Grid>

        <!-- 聊天列表 -->
        <ListView Grid.Row="2" 
                  x:Name="ChatListViewControl"
                  ItemsSource="{Binding FilteredChatList}"
                  SelectionMode="Single"
                  SelectionChanged="ChatListView_SelectionChanged"
                  ItemContainerStyle="{StaticResource ChatItemStyle}">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Height="72" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 頭像區域 -->
                        <Grid Grid.Column="0" Width="48" Height="48">
                            <!-- 頭像背景（當沒有頭像時） -->
                            <Ellipse Fill="{Binding AvatarColor, FallbackValue=#FF0078D4}"
                                    Visibility="{Binding HasAvatar, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=inverted}"/>

                            <!-- 頭像圖片 -->
                            <Ellipse Visibility="{Binding HasAvatar, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding AvatarImage}" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- 頭像文字（當沒有頭像圖片時） -->
                            <TextBlock Text="{Binding Name, Converter={StaticResource FirstLetterConverter}}"
                                      FontSize="20"
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Visibility="{Binding HasAvatar, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=inverted}"/>

                            <!-- 載入指示器 -->
                            <ProgressRing Width="20" Height="20"
                                         IsActive="{Binding IsLoadingAvatar}"
                                         Visibility="{Binding IsLoadingAvatar, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </Grid>

                        <!-- 聊天信息區域 -->
                        <StackPanel Grid.Column="1" 
                                   Margin="12,0,8,0"
                                   VerticalAlignment="Center">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 聊天名稱 -->
                                <TextBlock Grid.Column="0"
                                          Text="{Binding Name}" 
                                          Style="{StaticResource ChatNameTextStyle}"
                                          TextTrimming="CharacterEllipsis"
                                          MaxLines="1"/>

                                <!-- 群組成員數量 -->
                                <TextBlock Grid.Column="1"
                                          Text="{Binding MemberCount}"
                                          FontSize="12"
                                          Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                          Margin="4,0,0,0"
                                          Visibility="{Binding IsGroup, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </Grid>

                            <!-- 最後消息 -->
                            <TextBlock Text="{Binding DisplayLastMessage, FallbackValue={Binding LastMessage}}"
                                      Style="{StaticResource LastMessageTextStyle}"
                                      TextTrimming="CharacterEllipsis"
                                      MaxLines="1"
                                      Margin="0,2,0,0"/>
                        </StackPanel>

                        <!-- 時間和未讀數區域 -->
                        <StackPanel Grid.Column="2" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="8,0,0,0">
                            <!-- 時間 -->
                            <TextBlock Text="{Binding LastTime}"
                                      Style="{StaticResource TimeTextStyle}"
                                      HorizontalAlignment="Right"/>

                            <!-- 未讀數量徽章 -->
                            <Border Background="{StaticResource UnreadBadgeBrush}"
                                   CornerRadius="10"
                                   MinWidth="20"
                                   Height="20"
                                   Margin="0,4,0,0"
                                   Visibility="{Binding UnreadCount, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="{Binding UnreadCount}"
                                          FontSize="11"
                                          FontWeight="Bold"
                                          Foreground="White"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Padding="6,0"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- 載入指示器 -->
        <Grid Grid.Row="2" 
              Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
              Visibility="{Binding IsRefreshing, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <ProgressRing Width="40" Height="40" IsActive="True"/>
                <TextBlock Text="載入中..."
                          FontSize="14"
                          Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                          HorizontalAlignment="Center"
                          Margin="0,8,0,0"/>
            </StackPanel>
        </Grid>

        <!-- 空狀態顯示 -->
        <Grid Grid.Row="2"
              Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
              Visibility="{Binding FilteredChatList.Count, Converter={StaticResource EmptyListToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <FontIcon Glyph="&#xE8BD;"
                         FontSize="48"
                         Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,16"/>
                <TextBlock Text="暫無聊天"
                          FontSize="18"
                          Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="點擊聯絡人開始聊天"
                          FontSize="14"
                          Foreground="{ThemeResource SystemControlForegroundBaseLowBrush}"
                          HorizontalAlignment="Center"
                          Margin="0,8,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</views:MvxWindowsPage>